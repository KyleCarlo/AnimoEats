<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../style.css">
    <link rel="icon" href="../assets/ico/favicon.ico" type="image/x-icon">
    <title>{{storeName}}</title>
    
</head>
<body>
    <img src="../assets/svg/animoeats-logo.svg" alt="logo" class="logo">
    <div class="sidebar"></div>

    <div class="store-container">
        <div class="left"></div>
        <div class="center"></div>
        <div class="right"></div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script type="module">
        $(document).ready(function(){
            $(".sidebar").load("/side-bar");

            var restaurantInfo = {};
            {{#each restaurantInfo}}
                {{#each this}}
                    restaurantInfo.{{@key}} = '{{this}}';
                {{/each}}
            {{/each}}

            var reviews = [];
            {{#each reviews}}
                var review = {};
                {{#each this}}
                    review.{{@key}} = '{{this}}';
                {{/each}}
                reviews.push(review);
            {{/each}}

            $(".store-container .left").load('/resto-card', {post: restaurantInfo});
            
            for (let i = 0; i < reviews.length; i++){
                $('.store-container .right').append($('<div class="rev-con-self '+ (i+1) +'"></div>').load('/review-card', {post: reviews[i]}));
            }
        });
    </script>
</body>
</html>